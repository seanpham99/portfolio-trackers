{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@workspace/typescript-config/base.app.json",
  "compilerOptions": {
    "rootDirs": [".", "./.react-router/types"],
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@workspace/database-types": ["../../packages/database-types/src/index.ts"],
      "@workspace/api-types": ["../../packages/api-types/src/index.ts"]
    }
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ]
}
